---
import fetchArticles from "../lib/fetchArticles";
import { formatCategoryName } from "../lib/utils";

const articles = await fetchArticles({ collection:"all-articles" });
const uniqueCategories = [...new Set(articles.map(article => article.category))].sort();

---


<nav class="header-nav" aria-label="Header navigation">
    <ul>
        <li><a href="/">The Other Side</a></li>
    </ul>
</nav>

<nav class="article-nav" aria-label="Article navigation">
    <ul class="flow">
        {uniqueCategories.map((category) => (
            <li>
                <a href={`/articles/${category}`}>{formatCategoryName(category)}</a>
            </li>
        ))}
    </ul>
</nav>

<button class="hamburger-btn">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 -960 960 960">
        <path d="M120-240v-80h720v80H120Zm0-200v-80h720v80H120Zm0-200v-80h720v80H120Z"/>
    </svg>
</button>

<style>

.header-nav ul {
        list-style-type: none;
        display: flex;
        gap: 2rem;

        a {
            font-weight: 600;
            font-family: monospace;
            text-decoration: none;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: var(--clr-accent-2);
            transition: color 0.3s ease;

            &:hover {
                color: var(--clr-secondary);
            }
        }
    }
    
    .article-nav {
        position: absolute;
        top: calc(100% + 0.5rem);
        left: 50%;
        translate: -50%;
        overflow: clip;
        interpolate-size: allow-keywords;
        width: calc(100% - 4rem);
        height: 0;
        border-radius: 1rem;
        box-shadow: var(--shadow);
        transition: all 0.3s ease;
        
        ul {
            --_flow-space: 0.5rem;

            list-style-type: none;
            padding: 2rem;
            border-radius: 1rem;
            background-color: hsl(from var(--clr-font) h s 70%);

            a {
                font-weight: 600;
                font-family: monospace;
                text-decoration: none;
                text-transform: uppercase;
                letter-spacing: 1px;
                color: var(--clr-primary);
                transition: color 0.3s ease;

                &:hover {
                    color: var(--clr-secondary);
                }
            }
            
        }
    }

    .article-nav[data-visible] {
        height: auto;
    }

    .hamburger-btn {
        cursor: pointer;
        border: none;
        background-color: transparent;

        svg {
            width: clamp(2.5rem, 1vw  + 0.5rem, 3rem);
            fill: var(--clr-accent-2);
            transition: fill 0.3s ease;

            &:hover {
                fill: var(--clr-secondary);
            }
        }
    }

</style>