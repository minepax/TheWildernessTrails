---
import fetchArticles from "../lib/fetchArticles";
import { formatCategoryName } from "../lib/utils";

const articles = await fetchArticles({ collection:"all-articles" });
const uniqueCategories = [...new Set(articles.map(article => article.category))].sort();

---

<a href="/" class="logo">The Other Side</a>

<nav class="article-nav" aria-label="Article navigation">
    <ul class="flow">
        {uniqueCategories.map((category) => (
            <li>
                <a href={`/articles/${category}`}>{formatCategoryName(category)}</a>
            </li>
        ))}
    </ul>
</nav>

<button class="hamburger-btn">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 -960 960 960">
        <path d="M120-240v-80h720v80H120Zm0-200v-80h720v80H120Zm0-200v-80h720v80H120Z"/>
    </svg>
</button>

<style>

.logo {
    font-family: "Roboto Mono", monospace;
    font-weight: 700;
    font-size: 1.3rem;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: var(--clr-tertiary);
    transition: color 0.3s ease;

    &:hover {color: var(--clr-accent-1);}
}

.hamburger-btn {
    cursor: pointer;
    border: none;
    background-color: transparent;

    svg {
        width: clamp(2.5rem, 1vw  + 0.5rem, 3rem);
        fill: var(--clr-tertiary);
        transition: fill 0.3s ease;

        &:hover {fill: var(--clr-accent-1);}
    }
}

.article-nav {
    position: absolute;
    top: calc(100% + 0.5rem);
    overflow: clip;
    interpolate-size: allow-keywords;
    width: calc(100% - 4rem);
    height: 0;
    border-radius: 1rem;
    box-shadow: var(--shadow);
    transition: all 0.3s ease;
    
    ul {
        --_flow-space: 0.5rem;

        list-style-type: none;
        padding: 2rem;
        border-radius: 1rem;
        background-color: hsl(from var(--clr-primary-surface) h s 85%);

        a {
            font-family: "Roboto Mono", monospace;
            font-weight: 600;
            text-decoration: none;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: var(--clr-primary);
            transition: color 0.3s ease;

            &:hover {color: var(--clr-secondary);}
        }
        
    }
}

.article-nav[data-visible] {height: auto;}

</style>