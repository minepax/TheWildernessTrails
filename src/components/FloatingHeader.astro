---

import HeaderTemplate from "./HeaderTemplate.astro";

---

<header class="header">
    <div class="wrapper">
        <HeaderTemplate></HeaderTemplate>
    </div>
</header>

<style>

.header {
    position: sticky;
    top: 1rem;
    left: 0;
    z-index: 100;
    height: 4.5rem;
    pointer-events: none;
    opacity: 0;
    animation: fade-in linear forwards;
    animation-timeline: view();
    animation-range-start: 160vh;
    animation-range-end: 200vh;
    backdrop-filter: blur(10px);

    .wrapper {
        position: relative;
        width: 90%;
        height: 100%;
        padding-block: 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 2rem;
        border-radius: 100vw;
        border: 1px solid hsl(from var(--clr-font) h s l / 0.3);
        box-shadow: var(--shadow);
        background-color: hsl(from var(--clr-primary-surface) h s 8% / 0.7);
    }
}

@keyframes fade-in {
    100% {pointer-events: unset; opacity: 1;}
}

</style>