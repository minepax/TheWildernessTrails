---

import fetchArticles from "../lib/fetchArticles";
import { formatCategoryName } from "../utils/utils";

const articles = await fetchArticles({ collection:"all-articles" });
const uniqueCategories = [...new Set(articles.map(article => article.category))].sort();

---

<a href="/" class="logo">The Other Side</a>

<button class="hamburger-btn" aria-label="Article Navigation Toggle Buttton" aria-controls="article-nav">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 -960 960 960">
        <path d="M120-240v-80h720v80H120Zm0-200v-80h720v80H120Zm0-200v-80h720v80H120Z"/>
    </svg>
</button>

<nav class="article-nav" id="article-nav">
    <ul class="flow">
        {uniqueCategories.map((category) => (
            <li>
                <a href={`/articles/${category}`}>{formatCategoryName(category)}</a>
            </li>
        ))}
    </ul>
</nav>

<style>

.logo {
    font-family: "Atma", system-ui;
    font-weight: 700;
    font-size: 1.3rem;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: var(--clr-tertiary);
    transition: color 0.3s ease;

    &:is(:hover, :focus) {color: var(--clr-accent-1);}
}

.hamburger-btn {
    cursor: pointer;
    border: none;
    background-color: transparent;

    svg {
        width: clamp(2.5rem, 1vw  + 0.5rem, 3rem);
        fill: var(--clr-tertiary);
        transition: fill 0.3s ease;
    }

    &:is(:hover, :focus-visible) svg {fill: var(--clr-accent-1);}
}

.article-nav {
    position: absolute;
    top: calc(100% + 0.5rem);
    overflow: clip;
    interpolate-size: allow-keywords;
    width: calc(100% - 4rem);
    height: 0;
    visibility: hidden;
    border-radius: 1rem;
    box-shadow: var(--shadow);
    transition: height 0.3s ease, visibility 0.3s;

    &:is([data-visible], :focus-visible) {height: auto; visibility: visible;}
    
    ul {
        --_flow-space: 0.5rem;

        list-style-type: none;
        padding: 2rem;
        border-radius: 1rem;
        background-color: var(--clr-secondary);

        a {
            font-family: "Atma", system-ui;
            font-weight: 600;
            text-decoration: none;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: var(--clr-tertiary);
            transition: color 0.3s ease;

            &:is(:hover, :focus) {color: hsl(from var(--clr-accent-1) h s 30%);}
        }
        
    }
}

</style>

<script src="/scripts/global.js" is:inline></script>