---

import HeaderTemplate from "./HeaderTemplate.astro";

---

<header class="header">
    <div class="wrapper">
        <HeaderTemplate></HeaderTemplate>
    </div>
</header>

<style>

.header {
    position: sticky;
    top: 0;
    left: 0;
    z-index: 100;
    height: 4.5rem;
    opacity: 1;
    box-shadow: var(--shadow);
    background-color: hsl(from var(--clr-primary-surface) h s 8% / 0.7);
    backdrop-filter: blur(10px);

    .wrapper {
        position: relative;
        height: 100%;
        padding-block: 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 2rem;
    }
}

</style>